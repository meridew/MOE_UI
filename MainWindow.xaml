<Window x:Class="MOE_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        DataContext="{StaticResource Locator}" d:DesignHeight="768" d:DesignWidth="1024">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Height" Value="26"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Height" Value="26"/>
        </Style>
        <Style TargetType="DatePicker">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter 
                        Property="ToolTip"
                        Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}">
                    </Setter>
                </Trigger>
            </Style.Triggers>

            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Height" Value="26"/>

        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="VerticalAlignment" Value="Stretch"></Setter>
            <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
        </Style>
        <Style TargetType="StackPanel">
            <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
            <Setter Property="VerticalAlignment" Value="Stretch"></Setter>
        </Style>
    </Window.Resources>
    <Grid Name="WindowControls">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>

            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <Grid Name="CampaignRegionControls" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>

            <Label 
            Content="Create Campaign"
            Grid.Row="0" 
            Grid.Column="0" FontWeight="Bold">
            </Label>

            <Label 
                Content="Campaign Name" 
                Grid.Row="1" 
                Grid.Column="0">
            </Label>

            <TextBox 
                Grid.Row="1" 
                Grid.Column="1"
                Text="{Binding CampaignViewModel.SelectedCampaignName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}">
            </TextBox>

            <Label 
                Content="Region Name" 
                Grid.Row="2" 
                Grid.Column="0">
            </Label>

            <ComboBox
                Grid.Row="2"
                Grid.Column="1"
                ItemsSource="{Binding RegionViewModel.Regions, ValidatesOnDataErrors=True}"
                SelectedItem="{Binding RegionViewModel.SelectedRegion}" SelectedIndex="-1">
            </ComboBox>

            <Label 
                Content="Schedule Start" 
                Grid.Row="3" 
                Grid.Column="0">
            </Label>

            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                <DatePicker
                    SelectedDate="{Binding RegionViewModel.DateTimeViewModel.SelectedStartDate}"/>
                <ComboBox 
                    ItemsSource="{Binding RegionViewModel.DateTimeViewModel.Hours}"
                    SelectedItem="{Binding RegionViewModel.DateTimeViewModel.SelectedStartHour}"
                    Width="40" 
                    SelectedIndex="0">

                </ComboBox>
                <ComboBox 
                    ItemsSource="{Binding RegionViewModel.DateTimeViewModel.Minutes}"
                    SelectedItem="{Binding RegionViewModel.DateTimeViewModel.SelectedStartMinute}"
                    Width="40" 
                    SelectedIndex="0">

                </ComboBox>
            </StackPanel>

            <Label 
               Content="Schedule End" 
               Grid.Row="4" 
               Grid.Column="0">
            </Label>

            <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal">
                <DatePicker
                    SelectedDate="{Binding RegionViewModel.DateTimeViewModel.SelectedEndDate}">
                </DatePicker>
                <ComboBox 
                    ItemsSource="{Binding RegionViewModel.DateTimeViewModel.Hours}"
                    SelectedItem="{Binding RegionViewModel.DateTimeViewModel.SelectedStartHour}"
                    Width="40" 
                    SelectedIndex="0">

                </ComboBox>
                <ComboBox 
                    ItemsSource="{Binding RegionViewModel.DateTimeViewModel.Minutes}"
                    SelectedItem="{Binding RegionViewModel.DateTimeViewModel.SelectedEndMinute}"
                    Width="40" 
                    SelectedIndex="0">

                </ComboBox>
            </StackPanel>

            <TextBox 
                Text="target_device_os_family"
                Grid.Row="5">
                
            </TextBox>

            <Grid Grid.Row="5" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ComboBox 
                    ItemsSource="{Binding RegionViewModel.CriteriaViewModel.Operands}"
                    SelectedItem="{Binding RegionViewModel.CriteriaViewModel.SelectedTargetOsFamilyOperand}"
                    Grid.Column="0" 
                    SelectedIndex="0" ></ComboBox>
                <ComboBox 
                    ItemsSource="{Binding RegionViewModel.CriteriaViewModel.DeviceOsFamilies}"
                    SelectedItem="{Binding RegionViewModel.CriteriaViewModel.SelectedTargetOsFamilyValue}"
                    Grid.Column="1" 
                    SelectedIndex="0"></ComboBox>
            </Grid>

            <TextBox 
                Grid.Row="6" 
                Text="target_device_os_version"></TextBox>

            <Grid Grid.Row="6" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ComboBox 
                    ItemsSource="{Binding RegionViewModel.CriteriaViewModel.Operands}"
                    SelectedItem="{Binding RegionViewModel.CriteriaViewModel.SelectedTargetDeviceOsOperand}"
                    Grid.Column="0" 
                    SelectedIndex="0"></ComboBox>
                <TextBox 
                    Text="{Binding RegionViewModel.CriteriaViewModel.SelectedTargetDeviceOsValue, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                    Grid.Column="1" >
                </TextBox>
            </Grid>

            <TextBox 
                Grid.Row="7" 
                Text="last_communicated"></TextBox>

            <Grid Grid.Row="7" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>

                </Grid.ColumnDefinitions>
                <ComboBox 
                    ItemsSource="{Binding RegionViewModel.CriteriaViewModel.Operands}"
                    SelectedItem="{Binding RegionViewModel.CriteriaViewModel.SelectedTargetLastCommunicatedDaysOperand}"
                    Grid.Column="0" 
                    SelectedIndex="3"/>
                <TextBox 
                    Text="{Binding RegionViewModel.CriteriaViewModel.SelectedTargetLastCommunicatedDaysValue, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                    Grid.Column="1" ></TextBox>
            </Grid>


            <Label Grid.Row="8" Grid.Column="0" Content="Email Address Filter" FontWeight="Bold"></Label>
            <Label 
                Grid.Row="8" 
                Grid.Column="1" 
                Content="{Binding EmailViewModel.EmailAddressCount, UpdateSourceTrigger=PropertyChanged}"></Label>
            <TextBox 
                Grid.Row="10" 
                Grid.Column="0" 
                Grid.ColumnSpan="2"
                VerticalContentAlignment="Top"
                Text="{Binding EmailViewModel.EmailAddresses, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True"></TextBox>
            <Button
                Grid.Row="10"
                Grid.Column="0"
                Content="Remove Region">
            </Button>
            <Button
                Command="{Binding CampaignViewModel.AddRegionCommand}"
                Grid.Row="10" Grid.Column="1"
                Content="Add Region">
            </Button>
        </Grid>

        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>

            <Label 
                Content="Regions"
                Grid.Row="0" FontWeight="Bold">
            </Label>

            <DataGrid
                ItemsSource="{Binding CampaignViewModel.Regions, Mode=TwoWay}"
                SelectedItem="{Binding CampaignViewModel.SelectedRegionRow}"
                AutoGenerateColumns="False"                
                Grid.Row="1" SelectedIndex="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Region" Binding="{Binding RegionName}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Schedule Start" Binding="{Binding ScheduleStart}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Schedule End" Binding="{Binding ScheduleEnd}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Schedule Start UTC" Binding="{Binding ScheduleStartUtc}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Schedule End UTC" Binding="{Binding ScheduleEndUtc}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Emails" Binding="{Binding EmailAddressCount}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>

            <Button
                Content="Update Region"
                Grid.Row="2">
            </Button>

            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Content="Stages"
                    FontWeight="Bold">
                </Label>

                <DataGrid
                    Grid.Row="1"
                    Grid.Column="0"
                    ItemsSource="{Binding CampaignViewModel.SelectedRegionRow.Stages, Mode=TwoWay}"
                    SelectedItem="{Binding CampaignViewModel.SelectedStageRow}"
                    AutoGenerateColumns="False" SelectedIndex="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Stage Order" Binding="{Binding StageOrder}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Command" Binding="{Binding Command}"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <Label
                    Content="Criteria"
                    Grid.Row="0"
                    Grid.Column="1"
                    FontWeight="Bold">
                </Label>

                <DataGrid
                    ItemsSource="{Binding CampaignViewModel.SelectedStageRow.Criteria}"                
                    AutoGenerateColumns="False"
                    Grid.Row="1"
                    Grid.Column="1" SelectedIndex="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Field" Binding="{Binding Field}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Operand" Binding="{Binding Operand}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Value" Binding="{Binding Value}"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            
            <Button
                Grid.Row="5"
                Content="Create Campaign">
            </Button>
        </Grid>


    </Grid>
</Window>
